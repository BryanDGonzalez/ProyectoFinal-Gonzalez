rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura en la colecci칩n de productos
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura en la colecci칩n de 칩rdenes
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura en todas las dem치s colecciones
    match /{document=**} {
      allow read, write: if true;
    }
  }
} 